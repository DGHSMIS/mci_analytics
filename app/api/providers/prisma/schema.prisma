// Patient Vist Record Table
model PatientVisit {
  id                         Int             @id @default(autoincrement()) // Primary key
  patientId                  Int
  patientName                String
  dateOfVisit                DateTime
  dob                        DateTime
  gender                     Gender
  facilityId                 Int
  facilityName               String          @default("")
  serviceLocation            ServiceLocation
  diseaseId                  Int
  disease                    Disease         @relation(fields: [diseaseId], references: [id]) // Foreign key relationship
  isReferredToHigherFacility Boolean
  isFollowUp                 Boolean
  createdAt                  DateTime        @default(now())
}

// Disease Table
model Disease {
  id            Int            @id @default(autoincrement()) // Primary key
  name          String
  createdAt     DateTime       @default(now())
  // Relationship
  patientVisits PatientVisit[]
}

// Patient Vist Record Table
model SkippedPatientVisit {
  id         Int    @id @default(autoincrement()) // Primary key
  jsonObject String
}
